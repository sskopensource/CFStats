<UserControl x:Class="UserInterface.CFControls.LongBrick"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CFControls"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800">
    <Grid>
        <Canvas Height="35" Width="Auto" Canvas.Right="10">
            <Label FontFamily="Consolas" Content="{Binding TextLabel ,RelativeSource={RelativeSource AncestorType=UserControl}}" Foreground="#9eb3c7" VerticalAlignment="Center"  HorizontalAlignment="Left" FontSize="15" Margin="10,0,0,0"/>
            <Label FontFamily="Consolas" Foreground="{Binding ValueColor ,RelativeSource={RelativeSource AncestorType=UserControl}}" Content="{Binding ValueLabel ,RelativeSource={RelativeSource AncestorType=UserControl}}"  FontWeight="Bold" VerticalAlignment="Center" FontSize="18" Width="Auto" HorizontalAlignment="Right" Canvas.Right="20"/>
        </Canvas>
    </Grid>
</UserControl>
