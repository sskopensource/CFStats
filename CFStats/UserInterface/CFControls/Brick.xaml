<UserControl x:Class="UserInterface.CFControls.Brick"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserInterface.CFControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <Grid>
        <StackPanel Background="White" Margin="15,10,15,10" Height="80" Width="150" >
            <StackPanel.Effect>
                <DropShadowEffect ShadowDepth="2"/>
            </StackPanel.Effect>
            <Label VerticalAlignment="Center" HorizontalAlignment="Center" Content="Current Ratings" FontSize="18"/>
            <Label x:Name="ratingValueLabel" VerticalAlignment="Center" HorizontalAlignment="Center" Content="" FontWeight="Bold" FontSize="25"/>
        </StackPanel>
    </Grid>
</UserControl>
